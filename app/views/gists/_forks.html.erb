<% if @gist.forks.present? %>
    <hr/>
    <h4>Forks</h4>
    <ul class="unstyled">
      <% @gist.forks.each do |gist| %>
          <li class="muted">
            <small>
              <i class="icon-plus-sign"></i>&nbsp;
              <%= link_to gist.title, gist %>
              <br/>
              <%= time_ago_in_words(gist.created_at) + ' ago' %>
              by
              <% if gist.user.nil? %>Anonymous
              <% else %>
                <%= link_to gist.user.nickname, user_path(gist.user) %>
                <%= gravatar_image(gist.user, :size => 15) %>
              <% end %>
            </small>
          </li>
      <% end %>
    </ul>
<% end %>
